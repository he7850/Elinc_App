<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:padding="2dp"
        android:textSize="18sp"
        android:textColor="@color/guide_color" 
        />

    <com.bmob.im.demo.view.CircleImageView
        android:id="@+id/img_friend_avatar"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dip"
        android:padding="5dp"
        android:src="@drawable/head1" />
    <RelativeLayout
        android:id="@+id/above_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_friend_avatar"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_friend_avatar">
        <TextView
            android:id="@+id/tv_friend_name"
            style="@style/Smile.TextView._Black"
            android:text="ss"
            android:gravity="left"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:singleLine="true"
            android:textSize="24sp" />
        <ImageView
            android:layout_alignBottom="@+id/tv_friend_name"
            android:id="@+id/gender"
            android:layout_toRightOf="@+id/tv_friend_name"
            android:layout_gravity="bottom"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginRight="20sp"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:text="xq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_friend_avatar"
        android:layout_below="@+id/above_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tag1"
            android:textSize="12sp"
            android:text="eng"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/corner_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tag1"
            android:id="@+id/tag2"
            android:textSize="12sp"
            android:text="eng"
            android:paddingBottom="2dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/corner_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@+id/tag2"
            android:id="@+id/tag3"
            android:textSize="12sp"
            android:text="eng"
            android:background="@drawable/corner_bg"
            android:paddingBottom="2dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>