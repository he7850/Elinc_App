<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.bmob.im.demo.view.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"

                android:id="@+id/avatar_for_question"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp">
                        <TextView
                            android:text="加载中"
                            android:fontFamily="微软雅黑"
                            android:id="@+id/question_author"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:typeface="sans"
                            android:gravity="left"
                            android:textSize="12sp"
                            android:textColor="#66cc99"
                            android:layout_weight="8"
                            />
                        <TextView
                            android:id="@+id/question_number_of_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_weight="2"
                            android:layout_gravity="right"
                            android:fontFamily="微软雅黑"
                            android:gravity="center_vertical"
                            android:textSize="10sp"
                            android:typeface="sans" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="加载中"
                        android:fontFamily="微软雅黑"
                        android:id="@+id/question_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:typeface="sans"
                        android:gravity="center_vertical"
                        android:layout_marginTop="3dp"
                        android:textSize="10sp"
                        android:textColor="#757575"
                        />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:fontFamily="微软雅黑"
                android:textSize="18sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="6dp"
                android:textColor="#424142"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="加载中"
                android:fontFamily="微软雅黑"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="5dp"
                android:id="@+id/question_content"
                android:textSize="12sp"
                android:textColor="#616060"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="sans"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>