<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/elinc_green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/logo_for_login" />

        <LinearLayout
            style="@style/input_out">
            <TextView
                style="@style/input_left"
                android:text="手机号"
                android:textColor="#ffffff"/>
            <EditText
                android:id="@+id/et_username"
                style="@style/input_right" />

        </LinearLayout>
        <LinearLayout
            style="@style/input_out">
            <TextView
                style="@style/input_left"
                android:text="密码"
                android:textColor="#ffffff"/>
            <EditText
                android:id="@+id/et_password"
                style="@style/input_right" />

        </LinearLayout>

        <LinearLayout
            style="@style/input_out">


            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/corner_bg_mid_btn"
                android:gravity="center"
                android:text="@string/login"
                android:layout_marginRight="8dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_large" />
            <Button
                android:id="@+id/btn_register"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@drawable/corner_bg_mid_btn2"
                android:gravity="center"
                android:text="注册"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_find_pwd_in_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="找回密码"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal" />
        </LinearLayout>


</RelativeLayout>