<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bmob.im.demo.ui.NewGoalActivityElinc">

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="新目标" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goal_content_new_goal"
                android:maxLength="17"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="目标宣言"/>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLength="20"
            android:gravity="top"
            android:layout_marginBottom="5dp"
            android:id="@+id/claim_new_goal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="标签：未选择"
            android:layout_marginBottom="5dp"
            android:id="@+id/tag_tv" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出国考试"
                    android:textColor="#ffffff"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/corner_bg"
                    android:id="@+id/type1" />
                

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="考研"
                    android:textColor="#ffffff"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/corner_bg_yellow"
                    android:id="@+id/type2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐器"
                    android:textColor="#ffffff"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/corner_bg_green"
                    android:id="@+id/type3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四六级"
                    android:textColor="#ffffff"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/corner_bg_yellow"
                    android:id="@+id/type4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    android:text="课程考试"
                    android:textColor="#ffffff"
                    android:background="@drawable/corner_bg"
                    android:id="@+id/type5" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运动"
                    android:textColor="#ffffff"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/corner_bg_yellow"
                    android:id="@+id/type6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电脑技能"
                    android:textColor="#ffffff"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/corner_bg_blue"
                    android:id="@+id/type7" />
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    android:text="社会考试"
                    android:textColor="#ffffff"
                    android:background="@drawable/corner_bg"
                    android:id="@+id/type8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingRight="3dp"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    android:text="小语种"
                    android:textColor="#ffffff"
                    android:background="@drawable/corner_bg_blue"
                    android:id="@+id/type9" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="限定天数"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/day" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:maxLength="5"
            android:id="@+id/button"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:background="@drawable/green_button_selector"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

</LinearLayout>
