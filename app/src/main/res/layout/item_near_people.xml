<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <com.bmob.im.demo.view.CircleImageView
            android:id="@+id/img_friend_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:src="@drawable/head1" />
        <RelativeLayout
            android:gravity="top"
            android:layout_marginTop="8dp"
            android:id="@+id/above_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tags"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/img_friend_avatar"
            android:layout_toRightOf="@id/img_friend_avatar">
            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Smile.TextView._Black"
                android:text="ss"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:textSize="18sp" />
            <ImageView
                android:gravity="top"
                android:layout_alignBottom="@+id/tv_friend_name"
                android:id="@+id/gender"
                android:layout_toRightOf="@+id/tv_friend_name"
                android:layout_gravity="bottom"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/campus"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:text="ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tags"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/img_friend_avatar"
            android:layout_alignBottom="@+id/img_friend_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tag1"
                android:textSize="12sp"
                android:text="还未设置目标"
                android:paddingBottom="1dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/corner_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tag1"
                android:id="@+id/tag2"
                android:textSize="12sp"
                android:text=""
                android:paddingBottom="1dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/corner_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_toRightOf="@+id/tag2"
                android:id="@+id/tag3"
                android:gravity="center"
                android:textSize="12sp"
                android:text=""
                android:background="@drawable/corner_bg"
                android:paddingBottom="1dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/blank"
        android:padding="2dp"
        android:layout_below="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</RelativeLayout>